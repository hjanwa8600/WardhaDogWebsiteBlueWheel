<%-include("partials/header.ejs")-%>
<form style="width: 50%; margin: auto">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input
      type="text"
      class="form-control"
      id="exampleInputEmail1"
      placeholder="Enter Name"
    />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">NFT Link</label>
    <input
      type="text"
      class="form-control"
      id="exampleInputPassword1"
      placeholder="Enter NFT Link"
    />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Sex</label>
    <input
      type="password"
      class="form-control"
      id="exampleInputPassword1"
      placeholder="Enter Sex"
    />
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Story</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">
 Enter dog's Story</textarea
    >
  </div>

  <div class="checkbox-list">
    <div class="form-check flex-items">
      <input type="checkbox" class="" id="exampleCheck1" />
      <label class="form-check-label" for="exampleCheck1">Vaccinated</label>
    </div>

    <div class="form-check flex-items">
      <input type="checkbox" class="" id="exampleCheck1" />
      <label class="form-check-label" for="exampleCheck1">Neutered</label>
    </div>

    <div class="form-check flex-items">
      <input type="checkbox" class="form-check-input" id="exampleCheck1" />
      <label class="form-check-label" for="exampleCheck1">Spayed</label>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%-include("partials/footer.ejs")-%>
<style>
  .checkbox-list {
    display: flex;
    justify-content: center;
    margin-bottom: 10%;
  }
  .flex-items {
    margin-right: 5%;
  }
  input[type="checkbox"] {
    accent-color: #983a42;
    width: 16px;
    height: 16px;
  }
  input::placeholder {
    text-transform: none;
  }

  .form-control {
    text-transform: none;
  }
</style>
